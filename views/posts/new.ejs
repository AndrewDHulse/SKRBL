<%- include('../partials/header') %>

<div class="container my-5 py-5">
  <div class="row d-flex justify-content-center">
    <div class="col-md-12 col-lg-10 col-xl-8">
      <div class="card text-center border border-primary shadow-0" style="background-color:#e7effd;">
        <div class="card-body">
          <h5 class="card-title"><%= prompt.title %></h5>
          <p class="card-text"><%= prompt.content %></p>
        </div>
      </div>
      <br>
      <form method="POST" action="/posts">
        <input type="hidden" name="prompt" value="<%= prompt._id %>">
        <input type="hidden" name="user" value="<%= user._id %>">
        <div class="mb-3">
          <input type="text" class="form-control" id="postTitle" name="title" placeholder="Give your SKRBL a title!" required>
        </div>
        <div class="mb-3">
          <textarea class="form-control" id="postContent" name="content" placeholder="SKRBL here!" rows="5" required></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Create Post</button>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>