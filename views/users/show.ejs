<%- include('../partials/header') %>

<h1>THIS IS users/show</h1>

<section class="h-100 gradient-custom-2">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
    <div class="col col-lg-9 col-xl-7">
        <div class="card">
        <div class="rounded-top text-black d-flex flex-row" style="background-color: #e7effd; height:200px;">
            <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
            <%if (user.avatar){%>
              <img src="/uploads/<%= user.avatar %>"
                  alt="Profile Avatar" class="rounded-circle shadow-1-strong me-3"
                  style="width: 150px; z-index: 1">
            <%}else{%>
              <img src="<%= user.avatar %>"
                  alt="Profile Avatar" class="rounded-circle shadow-1-strong me-3"
                  style="width: 150px; z-index: 1">
            <%}%>
          <% if (user && user._id.equals(user._id)) { %>
            <a href="/users/<%= user._id %>/edit" class="btn btn-outline-dark" data-mdb-ripple-color="dark"
                style="z-index: 1;">
                Edit profile
                </a>
          <% } %>      
            </div>
            <div class="ms-3" style="margin-top: 130px;">
                <h5><%= user.name %></h5>
            </div>
            </div>
            <div class="p-4 text-black" style="background-color: #f8f9fa;">
            <div class="d-flex justify-content-end text-center py-1">
              <div>
                <p class="mb-1 h5"><%= user.posts.length %></p>
                <p class="small text-muted mb-0">SKRBLs</p>
            </div>
            </div>
          </div>
          <div class="card-body p-4 text-black">
            <div class="mb-5">
            <p class="lead fw-normal mb-1"><%=user.bio%></p>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-4">
            <p class="lead fw-normal mb-0">SKRBLs</p>
            </div>
            <div class="row g-2">
              <% posts.forEach((post, index) => { %>
                <div class="col">
                <div class="card">
                    <div class="card-body">
                    <h5 class="card-title">
                      <a href="/posts/<%= post._id %>"><%= post.title %></a>
                    </h5>
                    <p class="card-text"><%= post.content.substring(0, 100) %>...</p>
                    </div>
                  </div>
                </div>
              <% }); %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<%- include('../partials/footer') %>


